from debian

MAINTAINER eduardo eduortiz.asir@gmail.com

RUN apt-get update && apt-get install -y apache2 && apt install whois && useradd edu -d /home/edu -m -p `mkpasswd bolson` && mkdir /var/www/html/pam && apt-get install libapache2-mod-authnz-external pwauth && usermod -a -G shadow www-data && chown www-data:www-data /var/www/html/pam

ENV APACHE_RUN_USER www-data
ENV APACHE_RUN_GROUP www-data
ENV APACHE_LOG_DIR /var/log/apache2

EXPOSE 80
ADD ["index.html","/var/www/html/"]
ADD ["index.html","/var/www/html/pam/"]
ADD ["000-default.conf","/etc/apache2/sites-available/"]

ENTRYPOINT ["/usr/sbin/apache2ctl", "-D", "FOREGROUND"]
